<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="100dp">


    <TextView
        android:id="@+id/textId_first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="猜拳游戏" />

    <ImageView
        android:id="@+id/imageId_first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_below="@id/textId_first1"
        android:layout_toLeftOf="@id/textId_first1"/>

    <ImageView
        android:id="@+id/imageId_first2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textId_first1"
        android:layout_toRightOf="@+id/textId_first1"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <RadioGroup
        android:id="@+id/groupId_first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageId_first1"
        android:layout_alignLeft="@id/imageId_first1">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石头"
            android:id="@+id/radio_first1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪刀"
            android:id="@+id/radio_first2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布"
            android:id="@+id/radio_first3"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/groupId_first2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageId_first2"
        android:layout_alignRight="@id/imageId_first2">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石头"
            android:id="@+id/radio_first4"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪刀"
            android:id="@+id/radio_first5"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布"
            android:id="@+id/radio_first6"/>
    </RadioGroup>

    <Button
        android:id="@+id/confirm_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/groupId_first1"
        android:text="确定"/>


    <TextView
        android:id="@+id/textId_first2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_first"
        android:layout_alignLeft="@id/groupId_first1"
        android:text="结果"/>

    <TextView
        android:id="@+id/result_first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textId_first2"
        android:layout_alignLeft="@+id/groupId_first1"/>

    <TextView
        android:id="@+id/textId_first3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textId_first2"
        android:layout_alignRight="@id/groupId_first2"
        android:text="结果"/>

    <TextView
        android:id="@+id/result_first2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textId_first3"
        android:layout_alignRight="@+id/groupId_first2"/>

</RelativeLayout>
